<!DOCTYPE html>
<html lang="es">
<%- include('./templates/head', {titulo: 'Pagina de inicio'}) %>
<body>
    <%- include('./templates/navbar') %>
    <%- include('./templates/loader') %>
    <div class="content">
        <h1>Productos</h1>
        <form class="search">
            <input type="text" id="txt_buscar" placeholder="Buscar">
            <button class="buscar" id="btn_buscar">Buscar</button>
        </form>

        <% if(productos.length > 0){ %>
            <% productos.forEach(producto => { %>
                <div class="card">
                    <h2><%= producto.nomProduc %></h2>
                    <div class="info">
                        <p>Proveedor: <%= producto.nombre %></p>
                        <p>Contacto: <%= producto.email %></p>
                        <h4 class="descripcion">Descripción</h4>
                        <p><%= producto.descripcion %></p>
                    </div>
                    <h3>$ <%= producto.precio %> MXN</h3>
                </div>
            <% }) %>
        <% } %>

