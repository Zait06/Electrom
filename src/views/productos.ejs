                <p>Esta es la descripción del producto</p>
            </div>
            <h3>$ 123.45 MXN</h3>
        </div> -->
    </div>
    <%- include('./templates/footer') %>
    <script>
        const txtBus = document.querySelector('#txt_buscar');
        const btnBus = document.querySelector('#btn_buscar');
        btnBus.addEventListener('click',() => {
            window.location.href = "/productos";
        });
    </script>
</body>
</html>
